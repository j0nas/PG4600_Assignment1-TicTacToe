<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:gravity="center_vertical">

    <RelativeLayout
            android:id="@+id/layoutMainMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_gravity="center_horizontal">
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/start_twoplayer_game"
                android:id="@+id/btnStart2pGame"
                android:layout_below="@+id/btnStart1pGame" android:layout_alignParentLeft="true"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/start_oneplayer_game"
                android:id="@+id/btnStart1pGame" android:layout_gravity="center_horizontal"
                android:layout_centerVertical="true" android:layout_alignParentStart="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/mainmenu_gametitle"
                android:id="@+id/txtMainMenu_Title" android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="73dp"/>
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/mainmenu_abouthelp"
                android:id="@+id/btnAboutGame" android:layout_below="@+id/btnStart2pGame"
                android:layout_centerHorizontal="true"/>
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/mainmenu_highscores"
                android:id="@+id/btnHighScores" android:layout_below="@+id/btnAboutGame"
                android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</LinearLayout>